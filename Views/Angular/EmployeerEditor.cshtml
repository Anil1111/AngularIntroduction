@model jQueryFastFood.Models.EmpoloyeerInformation
<div ng-repeat="e in EmploymentHistory">
    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: 
        new {@class = "control-label col-md-2"}) {{$index}}
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Name, htmlAttributes: 
            new {@class = "form-control", ng_model = "e.Name"})
            @Html.ValidationMessageFor(model => model.Name, "", 
            new {@class = "text-danger"})
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.YearsOnJob, htmlAttributes: 
        new {@class = "control-label col-md-2"})
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.YearsOnJob, htmlAttributes: 
            new {@class = "form-control", ng_model = "e.YearsOnJob"})
            @Html.ValidationMessageFor(model => model.YearsOnJob, "", 
            new {@class = "text-danger"})
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.YearsInProfession, htmlAttributes: 
        new {@class = "control-label col-md-2"})
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.YearsInProfession, htmlAttributes: new {@class = "form-control", ng_model = "e.YearsInProfession"})
            @Html.ValidationMessageFor(model => model.YearsInProfession, "", new {@class = "text-danger"})
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PositionTitle, htmlAttributes: new {@class = "control-label col-md-2"})
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.PositionTitle, htmlAttributes: new {@class = "form-control", ng_model = "e.PositionTitle"})
            @Html.ValidationMessageFor(model => model.PositionTitle, "", new {@class = "text-danger"})
        </div>
    </div>

</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="button" value="Add an Employment Record" class="btn btn-default" 
               ng-click="AddEmploymentHistory()" />
    </div>
</div>